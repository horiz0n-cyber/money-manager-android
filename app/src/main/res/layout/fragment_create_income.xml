<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="340dp"
        android:layout_height="450dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/edittext_border_grey"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/danhMuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_sans"
            android:text="Danh mục"
            android:textColor="#6667AB"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/add_income_spiner_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_border_grey"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/soTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_sans"
            android:text="Số Tiền "
            android:textColor="#6667AB"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/add_income_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_border_grey"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="#6667AB"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_sans"
            android:text="Ngày"
            android:textColor="#6667AB"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/add_income_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_border_grey"
            android:ems="10"
            android:inputType="date"
            android:padding="5dp"
            android:textColor="#6667AB"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/ghiChu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_sans"
            android:text="Ghi chú"
            android:textColor="#6667AB"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/add_income_note"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_border_grey"
            android:ems="10"
            android:padding="5dp"
            android:textColor="#6667AB"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <Button
        android:id="@+id/btnadd_income_save"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/nunito_sans"
        android:text="LƯU "
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/change_pass"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/btn_bg_border"
        android:fontFamily="@font/nunito_sans"
        android:text="QUAY LẠI"
        android:textAllCaps="false"
        android:textColor="#6667AB"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnadd_income_save" />
</androidx.constraintlayout.widget.ConstraintLayout>