<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="166dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_piggy_bank_save_svgrepo_com" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/nunito_sans"
        android:text="Đăng ký tài khoản"
        android:textColor="#6667AB"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/regName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBackLogin"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/btn_bg_border"
        android:fontFamily="@font/nunito_sans"
        android:text="Bạn đã có tài khoản? Đăng nhập ngay"
        android:textAllCaps="false"
        android:textColor="#6667AB"
        android:textSize="13dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRegAcc"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/nunito_sans"
        android:text="Đăng ký"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/btnBackLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/regName"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/text_bg"
        android:drawableLeft="@drawable/ic_user_solid"
        android:drawablePadding="4dp"
        android:ems="10"
        android:fontFamily="@font/nunito_sans"
        android:hint="Họ và tên"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#6667AB"
        android:textColorHint="#6667AB"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/regPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/regPass1"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/text_bg"
        android:drawableLeft="@drawable/ic_key_solid"
        android:drawablePadding="4dp"
        android:ems="10"
        android:fontFamily="@font/nunito_sans"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="#6667AB"
        android:textColorHint="#6667AB"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/regPass2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/regPass2"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/text_bg"
        android:drawableLeft="@drawable/ic_key_solid"
        android:drawablePadding="4dp"
        android:ems="10"
        android:fontFamily="@font/nunito_sans"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="#6667AB"
        android:textColorHint="#6667AB"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegAcc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/regPhone"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/text_bg"
        android:drawableLeft="@drawable/ic_phone_solid"
        android:drawablePadding="4dp"
        android:ems="10"
        android:fontFamily="@font/nunito_sans"
        android:hint="Số điện thoại"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#6667AB"
        android:textColorHint="#6667AB"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/regDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/regDate"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/text_bg"
        android:drawableLeft="@drawable/ic_calendar_solid"
        android:drawablePadding="4dp"
        android:ems="10"
        android:fontFamily="@font/nunito_sans"
        android:hint="Ngày sinh"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#6667AB"
        android:textColorHint="#6667AB"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/regPass1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>